# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Server name and port (for local development, use localhost,1433)
# For Docker, use: database,1433
DB_SERVER=localhost,1433

# Database name
DB_NAME=AppDB

# Administrator user credentials
DB_USER=sa
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Provider type (for ASP.NET or ORM like Entity Framework)
DB_PROVIDER=SqlServer

# Connection string for local development
# For local: Server=localhost;Database=AppDB;User Id=sa;Password=YOUR_PASSWORD;Encrypt=False;TrustServerCertificate=True;
# For Docker: Server=database,1433;Database=AppDB;User Id=sa;Password=YOUR_PASSWORD;Encrypt=false;TrustServerCertificate=true;
CONNECTION_STRING=Server=localhost;Database=AppDB;User Id=sa;Password=CHANGE_ME_IN_PRODUCTION;Encrypt=False;TrustServerCertificate=True;

# ===========================================
# JWT CONFIGURATION (Authentication)
# ===========================================

# Secret key to sign JWT tokens (generate a new one with: openssl rand -base64 32)
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_GENERATE_WITH_OPENSSL_RAND_BASE64_32

# Token issuer (your API name)
JWT_ISSUER=ProductAPI

# Token audience (who can use these tokens)
JWT_AUDIENCE=ProductWebClients

# Token expiration time in minutes
JWT_EXPIRATION_MINUTES=60

# ===========================================
# ADMIN CREDENTIALS
# ===========================================

# Initial admin user credentials (used on first run)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=YOUR_SECURE_PASSWORD_HERE
ADMIN_USERNAME=admin