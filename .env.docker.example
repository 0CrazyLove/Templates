# ===========================================
# APPLICATION ENVIRONMENT
# ===========================================
# Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development

# URLs for local development
ASPNETCORE_URLS=http://localhost:5097;https://localhost:5098

# ===========================================
# DATABASE CONFIGURATION (Local SQL Server)
# ===========================================
DB_HOST=localhost
DB_PORT=1433
DB_NAME=AppDB_Development
DB_USER=sa

# !!! CHANGE THIS IN PRODUCTION !!!
DB_PASSWORD=YourLocalDevPassword123

MSSQL_EDITION=Developer
ACCEPT_EULA=Y

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=REPLACE_WITH_GENERATED_SECRET_KEY_HERE

JWT_ISSUER=MyApp_Development
JWT_AUDIENCE=MyApp_Users
JWT_EXPIRATION_MINUTES=60

# Configure at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
# For local development
GOOGLE_REDIRECT_URI=http://localhost:5097/api/auth/google/callback

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
# Frontend URL for CORS and redirects
# Default: Astro dev server on port 4321
FRONTEND_URL=http://localhost:4321

# Frontend health check endpoint (for monitoring)
FRONTEND_HEALTH_CHECK_URL=http://localhost:4321/health

# Backend API URL that frontend will use for requests
PUBLIC_API_URL=http://localhost:5097/api

# ===========================================
# BACKEND CONFIGURATION
# ===========================================
# URLs ASP.NET Core will listen on
# Use '+' to listen on all interfaces (for Docker)
ASPNETCORE_URLS=http://+:5097

# Backend health check endpoint
BACKEND_HEALTH_CHECK_URL=http://localhost:5097/health

# Environment: Development, Staging, Production
# For .env.example, keep as Development
ASPNETCORE_ENVIRONMENT=Development

# ===========================================
# INITIAL ADMIN ACCOUNT
# ===========================================
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_USERNAME=admin